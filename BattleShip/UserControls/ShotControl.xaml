<UserControl x:Class="BattleShip.UserControls.ShotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip.UserControls"
             mc:Ignorable="d" >
    <Button Click="Button_Click" BorderThickness="0" Margin="0">
        <Image x:Name="image" Stretch="Fill" Source="{Binding ImageSource}"></Image>
    </Button>
</UserControl>
