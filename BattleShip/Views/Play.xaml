<Page x:Class="BattleShip.Views.Play"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BattleShip.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="marginTop" Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition x:Name="marginBottom" Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="marginLeft" Height="5"/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition x:Name="marginRight" Height="5"/>
        </Grid.RowDefinitions>

        <Grid x:Name="infoGrid" Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <TextBlock Grid.Row="1" Grid.Column="1" Background="IndianRed"/>
        <TextBlock Grid.Row="1" Grid.Column="3" Background="LightBlue"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Background="IndianRed"/>
        <TextBlock Grid.Row="3" Grid.Column="3" Background="LightBlue"/>
        
        <Grid x:Name="mapShots" Grid.Row="2" Grid.Column="1"></Grid>
        <Grid x:Name="mapPlayer" Grid.Row="2" Grid.Column="3"></Grid>

        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Ennemy</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">You</TextBlock>
    </Grid>
</Page>
